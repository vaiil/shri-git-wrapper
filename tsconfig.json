{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [
      "esnext"
    ],
    "types": [
      "jest",
      "node",
      "rimraf",
      "express",
      "minimist",
      "cors",
      "dotenv"
    ],
    "rootDir": ".",
//    "strict": true
  },
  "include": [
    "get-dirs.ts",
    "git.ts",
    "server.ts"
  ]
}
